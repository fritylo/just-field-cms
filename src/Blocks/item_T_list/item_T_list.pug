mixin item_T_list(child)
   <?php global $glo; ?>
   - var path = glo['path']
   - var attach = glo['attach']

   if child

      tr(data-item-id=child.id, data-item-type=child.type.name).item_T_list&attributes(attributes)
         td(colname='order').page_table-order.row.jcc.aic.cup
            img(src=`${attach}/Images/up-down.svg` draggable="false")
         td(colname='key').p0
            input(placeholder='Input key...', value=child.key)
         td(colname='name').p0
            input(placeholder='Input name...', value=child.name)
         td(colname='value').w100.p0
            - var path_i = count(path_parts)+1;
            - var loc_path;
            if path == ''
               - loc_path = child.key
            else
               - loc_path = `${path}/${child.key}`
            +link('Open', `./dev.php?page=field&view=tree&path=${loc_path}&curr_path_i=${path_i}`).p1.db
         td(colname='type', colspan=1)= child.type.name
         td(colname='subtype', colspan=1)= child.subtype.name
         td.tac(colname='permission') edit

   else

      tr(data-item-id='{id}', data-item-type='{type}').item_T_list&attributes(attributes)
         td(colname='order').page_table-order.row.jcc.aic.cup
            img(src=`${attach}/Images/up-down.svg` draggable="false")
         td(colname='key').p0
            input(placeholder='Input key...', value='{key}')
         td(colname='name').p0
            input(placeholder='Input name...', value='{name}')
         td(colname='value').w100.p0
            - var path_i = count(path_parts)+1;
            - var loc_path;
            if path == ''
               - loc_path = '{key}'
            else
               - loc_path = `${path}/{key}`
            +link('Open', `./dev.php?page=field&view=tree&path=${loc_path}&curr_path_i=${path_i}`).p1.db
         td(colname='type', colspan=1) {type}
         td(colname='subtype', colspan=1) {subtype}
         td.tac(colname='permission') {permission}
